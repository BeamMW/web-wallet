{
  "compilerOptions": {
    "jsx": "react",
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types",
      "./src/@types"
    ],
    "types": ["node"],
    "baseUrl": "src/",
    "paths": {
      "@app/*": ["app/*"],
      "@core/*": ["app/core/*"],
      "@model/*": ["app/model/*"],
      "@uikit": ["app/uikit"],
      "@uikit/*": ["app/uikit/*"],
      "@pages/*": ["app/pages/*"],
      "@state/*": ["app/state/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
