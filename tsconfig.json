{
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "node_modules/web-ext-types",
      "./src/@types"
    ],
    "types": ["node"],
    "baseUrl": "src/",
    "paths": {
      "@core/*": ["app/core/*"],
      "@pages/*": ["app/pages/*"],
      "@state/*": ["app/state/*"],
      "@icons/*": ["app/icons/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
