{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "types": ["node"],
    "baseUrl": "src/app",
    "paths": {
      "@app/*": ["*"],
      "@wallet": ["WasmWallet.ts"],
      "@pages/*": ["pages/*"],
      "@state/*": ["state/*"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
