{
  "compilerOptions": {
    "jsx": "react",
    "target": "es5",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types", "node_modules/web-ext-types"],
    "types": ["node"],
    "baseUrl": "src/app",
    "paths": {
      "@intro/*": ["modules/intro/*"],
      "@main/*": ["modules/main/*"],
      "@shared/*": ["modules/shared/*"],
      "@api": ["api.ts"],
      "@model": ["model.ts"],
      "@wallet": ["WasmWallet.ts"]
    }
  },
  "include": ["**/*"],
  "exclude": ["node_modules"]
}
