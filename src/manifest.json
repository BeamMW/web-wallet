{
  "manifest_version": 2,
  "name": "Beam Web Wallet (Mainnet)",
  "short_name": "Beam Web Wallet (Mainnet)",
  "description": "Beam Web Wallet (Mainnet)",
  "version": "2.0.0",
  "browser_action": {
    "default_popup": "popup.html"
  },
  "background": {
    "page": "background.html",
    "persistent": true
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": [
        "contentscript.js"
      ],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "icons": {
    "16": "assets/chrome-extention-icon-16x16.png",
    "48": "assets/chrome-extention-icon-48x48.png",
    "128": "assets/chrome-extention-icon-128x128.png"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "web_accessible_resources": [
    "inpage.js"
  ]
}
